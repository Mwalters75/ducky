{
    "app-id": "ml.mdwalters.Ducky",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "runner.sh",
    "modules": [
        {
            "name": "Ducky",
            "buildsystem": "simple",
            "build-commands": [
                "install -D runner.sh /app/bin/runner.sh",
                "install -D ducky.py /app/ducky.py"
